 if (event.wheelDeltaY > 0 || nowY > lastY) {\n          visibleDescription.value = false;\n        }\n      }\n      lastY = nowY;\n    }\n    async function handleWrite() {\n      if (textShow.value.length === 0) {\n        for (let i = 0; i < charsText.length; i++) {\n          textShow.value += charsText[i];\n          await new Promise((r) => setTimeout(r, 50));\n        }\n      }\n    }\n    return { textShow, cursor, visibleDescription, visibleSkills };\n  },\n};\n</script>\n\n<style lang=\"scss\">\nbody {\n  overflow: hidden;\n}\nheader {\n  display: flex;\n  justify-content: center;\n  flex-direction: column;\n  background-image: url(\"@/assets/img/background.svg\");\n  background-color: black;\n  background-position: center;\n  background-size: cover;\n  height: 100vh;\n  width: 100%;\n  text-align: center;\n  h3 {\n    padding-bottom: 2em;\n  }\n  img {\n    margin: auto;\n    max-width: 20%;\n  }\n}\n#description {\n  top: 0;\n  left: 0;\n  right: 0;\n  bottom: 0;\n  z-index: 200;\n  margin-top: 100%;\n  opacity: 0;\n  position: absolute;\n  padding: 10%;\n  transition: all 0.5s ease-in-out;\n}\n#skills {\n  display: none;\n  height: 100vh;\n  div {\n    div {\n      display: grid;\n      gap: 1em;\n      grid-template-columns: repeat(auto-fit, minmax(8em, 1fr));\n      align-items: center;\n    }\n  }\n}\n.skill {\n  display: inline-block;\n  text-align: center;\n  font-weight: 600;\n  img {\n    margin: auto;\n    max-width: 100px;\n    max-height: 100px;\n  }\n}\n.up-hover {\n  transition: all 0.3s;\n  &:hover {\n    transform: translateY(-0.5em);\n  }\n}\n.show {\n  margin-top: 0 !important;\n  opacity: 1 !important;\n}\n.mdi-chevron-double-down {\n  animation: chevron 2s infinite;\n  position: absolute;\n  bottom: 0.1em;\n  left: 0;\n  right: 0;\n  margin: auto;\n  text-align: center;\n}\n@keyframes chevron {\n  0% {\n    transform: translateY(0);\n  }\n  80% {\n    transform: translateY(0);\n  }\n  90% {\n    transform: translateY(-0.2em);\n  }\n 